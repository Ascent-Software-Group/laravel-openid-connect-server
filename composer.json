{
    "name": "eideasy/laravel-openid-connect",
    "description": "Drop-in replacement for Laravel Passport to add support for OpenID Connect",
    "type": "library",
    "authors": [
        {
            "name": "eID Easy",
            "email": "support@eideasy.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Idaas\\Passport\\": "src/"
        }
    },
    "config": {
        "preferred-install": {
            "laravel/passport": "source",
            "*": "dist"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IdaasPassportTests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Idaas\\Passport\\PassportServiceProvider"
            ]
        }
    },
    "require": {
        "laravel/passport": "^10|^11",
        "laravel/legacy-factories": "^1.3",
        "omitobisam/openid-server": "0.2.0-alpha",
        "web-token/jwt-key-mgmt": "^3.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^6.0|^7.0|^8",
        "phpunit/phpunit": "^9.3"
    },
    "license": "LGPL-3.0-only"
}
